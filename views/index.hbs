<h1>Games collection</h1>

{{#if games.length}}
<div id="gameList">
    {{#each games}}
    <div id="gameDiv">
        <a href="/game/{{this.id}}">
            <img src="{{this.coverPath}}" id="gameCover" alt="{{this.name}} cover">
        </a>
        <a href="/game/{{this.id}}" id="gameName">{{this.name}}</a>
        {{!-- <a href="/editor/{{this.editorId}}" id="editorName">{{this.editor.name}}</a> --}}
        <p id="releaseDate">{{this.releaseDate}}</p>
    </div>
    {{/each}}
</div>
{{else}}
<p id="noneFound">No games found.</p>
{{/if}}